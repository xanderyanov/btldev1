mixin mainSlider
  .mainSlider__area.w1
    .mainSlider__outer
      .mainSlider
        .swiper-container.swiper-container1
          .swiper-wrapper
            .swiper-slide.swiper-slide1(style='background-image: url(assets/img/slider1/slide1.jpg);')
              .swiper__cadr
                .swiper__infoBox
                  .swiper__infoBoxTitle Детская одежда
                  .swiper__infoBoxDescription в магазине Каспер
                  a.swiper__infoBoxLink(href='#') В магазин
              img(src='assets/img/slider1cover2.png', alt='')
            .swiper-slide.swiper-slide1(style='background-image: url(assets/img/slider1/slide2.jpg);')
              .swiper__cadr
                .swiper__infoBox
                  .swiper__infoBoxTitle Одежда для девочек
                  .swiper__infoBoxDescription Новая летняя коллекция в магазине Каспер
                  a.swiper__infoBoxLink(href='#') В магазин
              img(src='assets/img/slider1cover2.png', alt='')
          // Add Pagination
          .swiper-pagination.swiper-pagination1
          // Add Arrows
          .swiper-pagination.swiper-button-prev.swiper-button-prev1
            i.icon-arr-left1
          .swiper-pagination.swiper-button-next.swiper-button-next1
            i.icon-arr-right1
    .mainFirstBox__outer
      .mainFirstBox